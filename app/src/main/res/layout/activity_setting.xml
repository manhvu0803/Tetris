<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SettingActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_background"
        android:padding="20dp">
        <!--        Guideline helpers-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.47"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.53"/>

        <!--        Items-->
        <LinearLayout
            android:id="@+id/llWinScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:text="Điểm Biên"
                android:textColor="@color/orange_block"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editWinScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/button_blue_center"
                android:background="@android:color/transparent"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRowScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/llWinScore"
            tools:layout_editor_absoluteX="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:text="Điểm xóa dòng"
                android:textColor="@color/orange_block"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editRowScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/button_blue_center"
                android:background="@android:color/transparent"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:inputType="number"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Độ khó"
            android:textColor="@color/orange_block"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/llWinScore"
            app:layout_constraintTop_toBottomOf="@+id/llRowScore"/>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:stretchColumns="0, 1, 2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mức"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tốc độ rơi"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Thời gian"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editSpeedDrop1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/editTime1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editSpeedDrop2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/editTime2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editSpeedDrop3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/editTime3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editSpeedDrop4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/editTime4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editSpeedDrop5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/editTime5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editSpeedDrop6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/editTime6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editSpeedDrop7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/editTime7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editSpeedDrop8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/editTime8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editSpeedDrop9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/editTime9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editSpeedDrop10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/editTime10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Cách điều khiển khối"
            android:textColor="@color/orange_block"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tableLayout"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"/>

        <RadioGroup
            android:id="@+id/rgControlBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/tableLayout"
            app:layout_constraintStart_toStartOf="@+id/tableLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView2">
            <RadioButton
                android:id="@+id/dragDrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:checked="true"
                android:text="Kéo thả"
                android:textColor="@color/button_blue_end"
                android:textSize="20sp"
                android:buttonTint="@color/button_blue_center"/>

            <RadioButton
                android:id="@+id/tap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bấm nút"
                android:textColor="@color/button_blue_end"
                android:textSize="20sp"
                android:buttonTint="@color/button_blue_center"/>
        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Kích thước bàn cờ"
            android:textColor="@color/orange_block"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tableLayout"
            app:layout_constraintTop_toBottomOf="@+id/rgControlBlock"/>

        <TableLayout
            android:id="@+id/tlBoardDimen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:stretchColumns="0, 1"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:layout_editor_absoluteX="20dp">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Chiều dài"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Chiều cao"
                    android:textColor="@color/button_orange_center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
            </TableRow>

            <TableRow>
                <EditText
                    android:id="@+id/editBoardWidth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/editBoardHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/button_blue_center"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:inputType="number"/>
            </TableRow>
        </TableLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Lưu"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/custom_green_round_button"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/tlBoardDimen"
            app:layout_constraintTop_toBottomOf="@+id/tlBoardDimen"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Hủy"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/custom_red_round_button"
            app:layout_constraintEnd_toEndOf="@+id/tlBoardDimen"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/tlBoardDimen"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>