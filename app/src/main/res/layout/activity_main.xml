<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--    Guideline helpers-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

    <!--    Items-->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPlayNew"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingVertical="20dp"
        android:text="@string/play_game"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:background="@drawable/custom_round_button"
        android:backgroundTint="@color/light_blue_400"
        app:layout_constraintEnd_toStartOf="@+id/end_vertical_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLoadGame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingVertical="20dp"
        android:text="@string/load_game"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:background="@drawable/custom_round_button"
        android:backgroundTint="@color/light_blue_400"
        app:layout_constraintEnd_toStartOf="@+id/end_vertical_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/start_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@+id/btnPlayNew" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSetting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingVertical="20dp"
        android:text="@string/settings"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:background="@drawable/custom_round_button"
        android:backgroundTint="@color/light_blue_400"
        app:layout_constraintEnd_toStartOf="@+id/end_vertical_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/start_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@+id/btnLoadGame" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnViewScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingVertical="20dp"
        android:text="@string/view_high_scores"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:background="@drawable/custom_round_button"
        android:backgroundTint="@color/light_blue_400"
        app:layout_constraintEnd_toStartOf="@+id/end_vertical_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@+id/btnSetting"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnExitApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingVertical="20dp"
        android:text="@string/exit"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:background="@drawable/custom_round_button"
        android:backgroundTint="@color/light_blue_400"
        app:layout_constraintEnd_toStartOf="@+id/end_vertical_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@+id/btnViewScore"/>
</androidx.constraintlayout.widget.ConstraintLayout>